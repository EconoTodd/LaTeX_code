\node at (-3, 2.5) {$B$};

\node at (3, 5) {$F$};

\node at (3, 2.5) {$E$};

\node at (1.5, 1.5) {$D$};

\node at (-1.5, 1.5) {$C$};

\node [] at (-5,0) {\LARGE \textbullet};

\end{tikzpicture}
\end{minipage}

\bigskip

\begin{minipage}{0.48\linewidth}

\underline{Bargaining}: plant pays $B + C$ to emit $e^{*}$

\medskip

Total Benefit = \$750

\medskip

Total Damage = \$250

\medskip

SW from Steel = \$750 - \$250 = \$500

\bigskip

\end{minipage}
\hspace{1cm}
\begin{minipage}{0.48\linewidth}

\flushleft

\begin{tikzpicture}[scale=0.4]

